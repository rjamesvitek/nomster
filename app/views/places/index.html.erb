
<% if @places.first.photos.present? %>

<a href="<%= place_path(@places.first) %>" >
	<div class="col-xs-12" style="background-image: url('<%= @photo.picture %>');background-size:cover;background-repeat:no-repeat;background-position:center 30%;width:100%;height:auto;padding:0px;">
		<img src="assets/bg.jpg" style="visibility:hidden;width:100%;" />
	</div>
</a>

<% end %>

<% @places.each do |place| %>
	<div class="booyah-box col-xs-10 col-xs-offset-1" >
		<h1><%= link_to place.name, place_path(place) %></h1>
		<i><%= place.address %></i>
		<br />
		<br />
		<p><%= place.description %></p>
		<br />

		<% if place.user.present? %>
			<small><%= place.user.email %></small>
		<% end %>

		<% if place.comments.present? %>
			<div class="col-xs-12">
				<blockquote>
					<% if place.comments.last.humanized_rating.present? %>
						<b><%= place.comments.last.humanized_rating %></b> -
					<% end %>
					<%= place.comments.last.message %>
					<small><%= place.comments.last.user.email %></small>
				</blockquote>
			</div>
		<% end %>

	</div>
<% end %>

<div class="col-xs-10 col-xs-offset-1">
	<%= paginate @places %>
</div>
